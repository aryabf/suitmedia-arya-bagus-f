<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SuitmediaAryaBagusF" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/dark_green_primary</item>
    </style>

    <style name="Theme.SuitmediaAryaBagusF" parent="Base.Theme.SuitmediaAryaBagusF" >
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="RoundedRectangle" parent="Theme.SuitmediaAryaBagusF">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/field</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackButton" parent="Theme.SuitmediaAryaBagusF">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:src">@drawable/baseline_arrow_back_ios_new_24</item>
    </style>

    <style name="BoldText" parent="Theme.SuitmediaAryaBagusF">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderLine" parent="Theme.SuitmediaAryaBagusF">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black</item>
    </style>

</resources>